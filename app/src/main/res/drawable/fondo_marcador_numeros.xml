<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Degradado de color -->
    <solid android:color="#FFFFFF"/>

    <!-- Bordes redondeados -->
    <corners android:radius="0dp"/>

    <!-- Borde externo -->
    <stroke
        android:width="2dp"
        android:color="#000000"/>

    <!-- Espaciado interno -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp"/>
</shape>
