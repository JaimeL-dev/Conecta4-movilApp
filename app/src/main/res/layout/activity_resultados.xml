<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:background="#BBDEFB"> <TextView
    android:id="@+id/tv_resultado_principal"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:textSize="38sp"
    android:textStyle="bold"
    android:textColor="#FFB300" android:text="¡Ganador: Jugador 1!"
    android:shadowColor="#000000"
    android:shadowRadius="2"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="80dp"/>

    <ImageView
        android:id="@+id/iv_animacion_victoria"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/img"
        android:contentDescription="Animación de victoria"
        app:layout_constraintTop_toBottomOf="@id/tv_resultado_principal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/tv_detalles_partida"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#1A237E" android:text="Movimientos realizados: 42"
        app:layout_constraintTop_toBottomOf="@id/iv_animacion_victoria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btn_jugar_de_nuevo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Jugar de nuevo"
        android:textSize="18sp"
        android:paddingVertical="14dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF4444" app:cornerRadius="24dp"
        app:layout_constraintBottom_toTopOf="@id/btn_volver_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_volver_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Volver al menú"
        android:textSize="18sp"
        android:paddingVertical="14dp"
        android:textColor="#1A237E" android:backgroundTint="#FFB300" app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>